<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itAboutTalking.TalkToMe17.MainActivity"
    android:id="@+id/activity_main"
    android:background="@drawable/background">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/btnMic"
            android:background="@drawable/mic"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:elevation="-1dp"
            android:alpha="0.5"
            android:onClick="btnMic_Onclick"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="100dp">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:id="@+id/btnSend"
                android:layout_marginRight="5dp"
                android:background="@drawable/search"
                android:onClick="serachBtn_Onclick"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:background="#26e9eef2"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:id="@+id/enterWordBox"
                android:cursorVisible="false"
                android:inputType="text"

                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:id="@+id/btnEraseNewWord"
                android:background="@drawable/erase"
                android:layout_marginLeft="5dp"
                android:onClick="eraseBtn_onClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/btn2"
            android:layout_alignParentStart="true"
            android:id="@+id/waitingMessage">
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0"
                android:id="@+id/btnLeftArrow"
                android:layout_marginRight="5dp"
                android:background="@drawable/arrow_left"
                android:onClick="arrowLeft_OnClick"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="fill_parent"
                android:text="המתן...טוען עוד משפטים"
                android:id="@+id/waitWhenLoading"
                android:textColor="#161df1"
                android:textSize="30dp"
                android:textStyle="italic"
                android:gravity="center"
                android:background="#abc"
                android:visibility="invisible"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0"
                android:id="@+id/btnRightArrow"
                android:background="@drawable/arrow_right"
                android:onClick="arrowRightOnclick"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="1"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:id="@+id/btn1"
            android:onClick="btn1_Onclick"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="2"
            android:textAllCaps="false"
            android:id="@+id/btn2"
            android:layout_marginTop="150dp"
            android:textSize="20dp"
            android:onClick="btn2_Onclick"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnWheel"
            android:background="@drawable/wheel"
            android:layout_alignParentBottom="true"
            android:keepScreenOn="true"
            android:layout_alignParentStart="true"
            android:elevation="10dp"
            android:onClick="btnWheel_Onclick"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivDarkBack"
            android:alpha="0.65"
            android:background="#1b2025"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:onClick="ivDarkBack_Onclick"/>
         <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ivDarkLittle"
            android:background="#1b2025"
            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="350dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="-1dp"
            android:id="@+id/recycle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <fragment
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/continarTrain"
            tools:layout="@layout/fragment_wheel"
            android:name="itAboutTalking.TalkToMe17.WheelFragment"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btnWheel"

          />

   </RelativeLayout>


